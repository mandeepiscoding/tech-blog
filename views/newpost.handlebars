<section class="card login-card">
  <form class="form new-post-form">
    <h2 class="card-header">New Post</h2>
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title"/>
      </div>
      <div class="form-group">
        <label for="post-body">Body:</label>
        <input class="form-input" type="text" id="post-body"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit-btn" data-id="{{userId}}">Submit</button>
      </div>
  </form>
</section>

<script src="../js/newpost.js"></script>