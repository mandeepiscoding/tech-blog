<section class="card login-card">
  <form class="form update-form">
    <h2 class="card-header">Edit Post</h2>
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" value="{{postData.title}}"/>
      </div>
      <div class="form-group">
        <label for="post-body">Body:</label>
        <input class="form-input" type="text" id="post-body" value="{{postData.body}}"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit-btn" data-id="{{postData.id}}">Submit</button>
        <button class="btn btn-primary" type="button" id="delete-btn" data-id="{{postData.id}}">Delete</button>
      </div>
  </form>
</section>

<script src="../js/update.js"></script>
